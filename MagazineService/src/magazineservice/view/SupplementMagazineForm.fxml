<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="editableForm" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="magazineservice.controller.SupplementMagazineFormController">
    <center>
        <VBox fx:id="fieldContainer" spacing="15.0f">
            <children>
                <HBox fx:id="titleField" spacing="5.0f">
                    <Label fx:id="titleFieldLabel" text="Title: " alignment="CENTER_LEFT"></Label>  
                    <Label fx:id="displayedTitle"></Label>
                    <TextField fx:id="titleFieldTextBox" managed="false" visible="false"></TextField>
                </HBox>
                <HBox fx:id="weeklyCostField" spacing="5.0f">
                    <Label fx:id="weeklyCostFieldLabel" text="Weekly Cost: $" alignment="CENTER_LEFT"></Label>
                    <Label fx:id="displayedWeeklyCost"></Label>
                    <TextField fx:id="weeklyCostFieldTextBox" managed="false" visible="false"></TextField>
                </HBox>
                <HBox fx:id="typeField" spacing="5.0f">
                    <Label fx:id="typeFieldLabel" text="Type: " alignment="CENTER_LEFT"></Label>
                    <Label fx:id="supplementLabel" text="Supplement"></Label>
                </HBox>
                <HBox fx:id="numOfSubsField" spacing="5.0f">
                    <Label fx:id="numOfSubsFieldLabel" text="Subscribed Customers: " alignment="CENTER_LEFT"></Label>
                    <Label fx:id="displayedCount" text="0"></Label>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0f" left="10.0f" right="10.0f" top="10.0f" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
